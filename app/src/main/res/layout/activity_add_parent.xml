<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.addteacher.AddTeacherActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="parent email"
        android:id="@+id/parentEmailET"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="parent password"
        android:id="@+id/parentPasswordET"/>

    <Spinner
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/kidsSpiner">

    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Add Parent"
        android:id="@+id/addParentBTN"/>

    <Button
        android:id="@+id/deleteKidsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/whiteColor"
        android:text="Delete All Added kids"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>



</LinearLayout>